<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0-windows</TargetFramework>
        <AssemblyName>TrainingModelOAuth</AssemblyName>
        <Nullable>enable</Nullable>
        <UseWindowsForms>true</UseWindowsForms>
        <ImplicitUsings>enable</ImplicitUsings>
        <ApplicationIcon>resources\Main.ico</ApplicationIcon>
        <BaseOutputPath>$(RepositoryRoot)bin</BaseOutputPath>
        <StartupObject>TrainingModelOAuth.Startup.Program</StartupObject>
        <RootNamespace>TrainingModelOAuth</RootNamespace>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)' == 'Release' AND '$(PublishDir)' != ''">
        <GenerateRuntimeConfigurationFiles>false</GenerateRuntimeConfigurationFiles>
        <PublishSingleFile>true</PublishSingleFile>
        <SelfContained>true</SelfContained>
        <RuntimeIdentifier>win-x64</RuntimeIdentifier>
        <IncludeAllContentForSelfExtract>true</IncludeAllContentForSelfExtract>
        <EnableCompressionInSingleFile>true</EnableCompressionInSingleFile>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\GUI\GUI.csproj" />
      <ProjectReference Include="..\Interfaces\Interfaces.csproj" />
      <ProjectReference Include="..\OAuthServer\OAuthServer.csproj" />
    </ItemGroup>

</Project>